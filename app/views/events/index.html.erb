
<% if current_user %>
  <ul class="row">
    <% @ex_menu.each do |menu| %>
    <li class="col-md-4 well">
      <div class="thumbnail">
        <div class="caption">
          <div class="page-heading">
            <h2>Menu Style: <%= menu.style %></h2>
          </div>
          <h2>Antipasti</h2>
          <hr class="hr-menu">
          <p><%= menu.antipasti %></p>
          <br>
          <h2>Pasta</h2>
          <hr class="hr-menu">
          <p><%= menu.pasta %></p>
          <br>
          <h2>Main</h2>
          <hr class="hr-menu">
          <p><%= menu.main_dish %></p>
          <br>
          <h2>Dessert</h2>
