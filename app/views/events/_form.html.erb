<%= form_for [@user, @event] do |f| %>
  <% if @user.admin %>

    <div class="form-group">
      <%#= hidden_field_tag("event[confirm]", value = false)%>
      <%= f.check_box("confirm", {class: "checkbox", id:"checkbox-input"}, value = true, @event.confirm ? true :false) %>
      <%= f.label :confirm%>
    </div>

    <div class="form-group">
      <%= f.select "user_id", options_from_collection_for_select(@users, "id", "first_name") %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :party_for %>
    <%= f.text_field :party_for, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :number_of_people %>
    <%= f.number_field :number_of_people, class: "form-control", min: 10, max: 50, steps: 1 %>
    <p>(Party must be no less than 10 no greater than 50 people)</p>
  </div>

  <div class="form-group">
    <%= f.label :date_and_time %>
    <%= f.datetime_field :date_and_time, value: "#{@event.date_and_time}", class: "form-control"%>
  </div>
  <hr>
  <%= f.submit 'Request Reservation', class: "btn btn-block btn-success" %>
<% end %>
