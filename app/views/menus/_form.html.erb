<%= render 'layouts/errors', :object => @menu %>

<%= form_for [@event, @menu] do |f| %>

  <div class="form-group">
    <%= f.label :style %>
    <%= f.text_field :style, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control", min: 1, max: 9999, steps: 1 %>
  </div>

  <div class="form-group">
    <%= f.label :antipasti %>
    <%= f.select :antipasti, options_for_select(@antipastis.collect { |antipasti| [antipasti.name] }, :selected => @menu.antipasti),  { include_blank: true }, class: "form-control"%>
  </div>


  <div class="form-group">
    <%= f.label :pasta %>
    <%= f.select :pasta, options_for_select(@pastas.collect { |pasta| pasta.name }, :selected => @menu.pasta), { include_blank: true }, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :main_dish %>
    <%= f.select :main_dish, options_for_select(@main_dishes.collect { |main| [main.name] }, :selected => @menu.main_dish), { include_blank: true }, class: "form form-group form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :desserts %>
   <div>
    <% @desserts.each do |dessert|%>
      <div class="checkbox-inline">
        <%= check_box_tag(dessert.name,dessert.name, false, class: "checkbox") %><%= dessert.name %>
      </div>
    <% end %>
   </div>
  </div>
  <div class="form-group">
    <%= f.label :wine %>
    <%= f.select :wine, options_for_select(@wines.collect { |wine| [wine.grape] }, :selected => @menu.wine), { include_blank: true }, class: "form form-group form-control" %>
  </div>

  <%= f.submit "Create Menu", class: "btn btn-block btn-primary" %>
<% end %>
