<%= form_for @dessert do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_area :description, cols: 20, rows: 5, class: "form-control"%>
  </div>

  <label>Add Photo</label>
  <div class="form-group">
    <input id="uploadFile" placeholder="Choose File" disabled="disabled" />
    <div class="file-upload btn btn-primary">
      <span>Upload Image</span>
      <%= f.file_field :image, class: "form-control upload", id: "uploadBtn" %>
    </div>
  </div>

  <%= f.submit "Submit Dessert Item", class: "btn btn-success btn-block"%>
<% end %>
