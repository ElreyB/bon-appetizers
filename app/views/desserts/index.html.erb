<div class="well item-well">
  <div class="page-header item-header">
    <h1 class="text-center">Dessert
    <% if current_user.admin %>
    <small><%= link_to "Add Bit", new_bit_path %></small>
    <% end %>
    </h1>
  </div>
  <% if @desserts.any? %>
    <div class="row  display-flex">
      <% @desserts.each do |dessert| %>
        <div class="col-md-4">
          <div class="thumbnail gold-bg">
            <div id="dessert_details_<%=dessert.id%>">
              <%= image_tag dessert.image.url(:medium) %>
            </div>
            <div class="caption">
              <p class="no-line"><%= link_to dessert.name, dessert_path(dessert), id: "dessert_#{dessert.id}", remote: true %></p>
              <hr>
              <% if @user.admin %>
                <p>
                  <%= link_to "Edit Dessert", edit_dessert_path(dessert) %> | <%= link_to "Delete Dessert", dessert_path(dessert),
                :data => {:confirm => "Deleting will remove #{dessert.name} from site!!!!",
                  :method => "delete"} %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>Currently there are no dessert.</p>
  <% end %>

</div>
