
<div class="well signup-well">

    <h2>Sign up</h2>
    <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%devise_error_messages!%>
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, autofocus: true, class: "form-group form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-group form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= f.label :phone %>
          <%= f.phone_field :phone, class: "form-group form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, class: "form-group form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= f.label :password %><br>

          <%= f.password_field :password, autocomplete: "off", class: "form-group form-control" %>
          <% if @minimum_password_length %>
          <em>(Password must contain at least 6 characters, a number, a lowercase letter, uppercase letter, a symbol)
          </em>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-group form-control" %>
        </div>
      </div>
    </div>
    <hr>
    <br>
    <div class="row">
      <div class="col-md-6">
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-block btn-success" %>
        </div>
      <% end %>
      </div>
      <div class="col-md-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
