
<% if @user.events.any? %>
  <ul class="row">
    <% @user.events.each do |event| %>
      <li class="col-sm-5 col-sm-offset-1 well gold-bg">
        <%= link_to event.party_for, event_path(event) %> | <%= link_to 'Quick Detail', event_path(event), id: "event#{event.id}", remote: true %>
        <div id="event-detail<%=event.id%>">

        </div>
      </li>
    <% end %>
  </ul>
<% else %>
<div class="well">
  <p>Currently you have no events planned!</p>
</div>
<% end %>
