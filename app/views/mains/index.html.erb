<div class="well item-well">
  <div class="page-header item-header">
    <h1 class="text-center">Mains
    <% if current_user.admin %>
    <small><%= link_to "Add Main", new_main_path %></small>
    <% end %>
    </h1>
  </div>
  <% if @mains.any? %>
  <div class="row  display-flex">
      <% @mains.each do |main| %>
        <div class="col-md-4">
          <div class="thumbnail gold-bg">
            <div id="main_details_<%=main.id%>">
              <%= image_tag main.image.url(:medium) %>
            </div>
            <div class="caption">
              <p class="no-line item-p-link"><%= link_to main.name, main_path(main), id: "main_#{main.id}", remote: true %></p>
              <hr>
              <% if @user.admin %>
                <p>
                  <%= link_to "Edit Main", edit_main_path(main) %> | <%= link_to "Delete Main", main_path(main),
                  :data => {:confirm => "Deleting will remove #{main.name} from site!!!!",
                    :method => "delete"} %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>Currently there are no main.</p>
  <% end %>

</div>
